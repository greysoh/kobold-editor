{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "outDir": "./out",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,

    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}